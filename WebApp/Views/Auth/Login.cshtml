@model WebApp.ViewModels.LoginModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    <div>
        <label>Username/Email</label>
        <input type="text" asp-for="Username" />
    </div>
    <div>
        <label>Password</label>
        <input type="text" asp-for="Password" />
    </div>
    <div>
        <label asp-for="Remember">Remember me</label>
        <input type="checkbox" asp-for="Remember" />
    </div>
    <div>
        <button>Login</button>
    </div>
</form>